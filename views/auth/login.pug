
extends ../layout/index

block contenido 
    div.py-10
        h1.text-5xl.my-10.font-extrabold.text-center Idea
            span.font-normal Listo
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md 
            div(class="rounded-[10px] bg-white py-8 px-6 drop-shadow-xl")            
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                    div.flex.justify-center.pt-4
                        input(class="w-80  bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 rounded-md cursor-pointer" type="submit" value="Iniciar Sesión")
                        //input(class="w-80  bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 rounded-md cursor-pointer" type="submit" value="Iniciar Sesión")
                    div.flex.justify-center.gap-8.pt-4
                        a.text-gray-500.text-xs.bg-orange-200.p-3.rounded-md(href="/auth/olvide-password") Olvide mi password 
                        a.text-gray-500.text-xs.bg-orange-200.p-3.rounded-md(href="/auth/registro") Registrar cuenta
                        